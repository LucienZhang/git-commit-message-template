<idea-plugin>
    <id>org.jetbrains.plugins.template</id>
    <name>Template</name>
    <vendor>JetBrains</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>
    <depends>hg4idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.rspn.services.ApplicationService"/>
        <projectService serviceImplementation="com.rspn.services.ProjectService"/>
    </extensions>

    <projectListeners>
        <listener class="com.rspn.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
    <actions>
        <action id="vcs-commit-message-template.SetCommitMessageAction" class="com.rspn.action.SetCommitTemplateAction"
                text="Set Commit Message from Branch"
                description="Commit message"
                keymap="$default"
                icon="AllIcons.Vcs.Branch">
            <add-to-group group-id="Vcs.MessageActionGroup" anchor="last"/>
            <keyboard-shortcut first-keystroke="ctrl k" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>
